{
	"name": "crayon.js",
	"version": "2.3.1",
	"description": "Terminal coloring done fast",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"type": "module",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": ">=12"
	},
	"author": {
		"name": "Im-Beast",
		"url": "https://github.com/Im-Beast"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Im-Beast/crayon.js.git"
	},
	"ava": {
		"files": [
			"test/ava.test.ts"
		],
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm/transpile-only.mjs"
		],
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		}
	},
	"denoify": {
		"includes": []
	},
	"keywords": [
		"typescript",
		"ts",
		"color",
		"colour",
		"styling",
		"formatting",
		"style",
		"ansi",
		"rgb",
		"256",
		"hsl",
		"terminal",
		"console",
		"cli",
		"cmd",
		"tty",
		"text",
		"log"
	],
	"scripts": {
		"build": "node --loader ts-node/esm/transpile-only.mjs bundle.js && npx denoify",
		"bench": "node --loader ts-node/esm/transpile-only.mjs test/benchmark.ts",
		"test": "echo false > test-passed && ava && echo true > test-passed | c8 --reporter=json-summary ava",
		"badges": "node --loader ts-node/esm/transpile-only.mjs badges.ts",
		"coverage": "c8 ava",
		"coverage-html": "c8 --reporter=html ava"
	},
	"files": [
		"lib"
	],
	"devDependencies": {
		"@ava/typescript": "^3.0.0",
		"@types/node": "^17.0.34",
		"@types/uglify-js": "^3.13.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"ava": "^3.15.0",
		"c8": "^7.7.1",
		"denoify": "^0.10.4",
		"eslint": "^8.0.1",
		"ts-node": "^10.0.0",
		"typescript": "^4.2.4",
		"uglify-js": "^3.13.3"
	}
}
