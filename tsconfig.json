{
	"compilerOptions": {
		"lib": ["ES2018"],
		"target": "ES2018",
		"module": "commonjs",
		"moduleResolution": "Node",

		"strict": true,
		"alwaysStrict": true,

		"esModuleInterop": true,
		"skipLibCheck": true,

		"declaration": true,
		"stripInternal": true,
		"sourceMap": false,

		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,

		"forceConsistentCasingInFileNames": true,

		"outDir": "lib"
	},

	"exclude": ["lib", "test", "node_modules"]
}
