{
	"compilerOptions": {
		"target": "es5",
		"alwaysStrict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"declaration": true,

		"strict": true,
		"outDir": "lib"
	},

	"exclude": ["lib", "test", "node_modules"]
}
